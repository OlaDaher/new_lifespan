<%= semantic_form_for(@medic) do |f| %>
  <% if @medic.errors.any? %>
    <% @medic.errors.delete(:password_digest) %>
    <div id="error_explanation">
    <h2><%= pluralize(@medic.errors.count, "error") %> prohibited this medic from being saved:</h2>

    <ul>
    <% @medic.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
  <% end %>
  
  <% if current_donor && current_donor.admin == true%>
    <div class="selector">
        <%= f.label :organization_id %>
        
    <%= collection_select(:medic, :organization_id, Organization.all, :id, :name, :include_blank => true, :default => nil) %>
    </div>
  <br>
    <div class="field">       
     Admin <%= f.check_box :admin %>
    </div>
    
    </br>
  <% end %>  

  <% if current_medic && current_medic.admin == true%>
   <%= f.input :organization_id, :as => :hidden, :input_html => { :value => current_medic.organization_id } %>
  <% end %>  

<% if current_medic && current_medic.admin == true || current_medic && current_medic.admin == false %>

  <div class="field">
<%= f.label :photo %>
      
  <%= f.file_field :photo %>
  </div>
  <div class="field">
 <%= f.text_field :first_name, :placeholder => "First Name" %>
  </div>
  <div class="field">
    <%= f.text_field :last_name, :placeholder => "Last Name" %>
  </div>
  <div class="field">
      <%= f.label :date_of_birth %>
      
 <%= f.date_select :date_of_birth, :order => [:day, :month, :year], :include_blank => true, :default => nil, :start_year => 123.years.ago.year, :end_year => Date.today.year-16 %>
  </div>
   <div class="field">
<%= f.text_field :phone, :placeholder => "Phone" %>
  </div>
  <div class="field">
<%= f.select(:position, Medic::Position) %>
  </div>
<% end %>


  </br>

  <div class="field">
    <%= f.text_field :email, :placeholder => "Email" %>
  </div>
  
  <div class="field">
      <%= f.input :password, :as => :pwdcalc %>
    </div>

    <div class="field">
      <%= f.input :password_confirmation, :as => :pwdcalc %>
    </div>

  <div class="actions"><%= f.submit %></div>
  <br>
<% end %>

